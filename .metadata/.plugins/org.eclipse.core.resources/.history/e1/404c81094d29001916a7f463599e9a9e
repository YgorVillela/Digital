package br.com.fiap.loja.TerminalConsulta;

import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Scanner;

public class Exercicio {

	public static void main(String[] args) {

		int cod = 0;

		Scanner teclado = new Scanner(System.in);

		
		System.out.println("Bem-vindo a Loja 4000");
		Calendar data = Calendar.getInstance();
		SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy hh:mm");
		sdf.format(data.getTime());
		System.out.println(sdf.format(data.getTime()));
		
		System.out.println("Código 401 - camiseta branca");
		System.out.println("Código 402 - Camiseta azul");
		System.out.println("código 403 - Camiseta rosa");
		
		
		System.out.println("Entre com o código da camiseta");
		teclado.next();
		switch (cod) {
		case 1:
			System.out.println("Código 401 - Camiseta branca");
		break;
		case 2:
			System.out.println("Código 402 - Camiseta azul");
		break;
		case 3:
			System.out.println("Código 403 - Camiseta rosa");
		break;
		default:
			System.err.println("Produto não encontrado");
			break;
		}
		
		teclado.close();
	}

}
