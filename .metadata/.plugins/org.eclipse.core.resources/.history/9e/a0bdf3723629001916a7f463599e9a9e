package br.com.fiap.revisao.beans;

public class Pessoa {

	/*
	 * Modificadores de acesso public, private, protected - filhas e pacote
	 * default/package - pacote
	 */

	private String nome;

	private long rm;

	// 1 - Mesmo nome da classe
	// 2 - Não tem retorno(nem void)
	// 3 - Chamar um construtor do pai (1 linha)

	/*
	 * public Pessoa() { super(); // chama o construtor vazio do pai }
	 */

	public String validarRm() {
		String rmStr = rm + "";
	}

	public Pessoa(String nome) {
		this.nome = nome;
		// setNome(nome);
	}

	public String getNome() {
		return nome;
	}

	public void setNome(String nome) {
		this.nome = nome;
	}

	public long getRm() {
		return rm;
	}

	public void setRm(long rm) {
		this.rm = rm;
	}

}
