package br.com.fiap.teste;

import javax.swing.JOptionPane;

import br.com.fiap.bo.EstoqueBO;

public class Teste {

	public static void main(String[] args) {

		EstoqueBO bo = new EstoqueBO();
		int cod = 0;

		do {
		cod = Integer.parseInt(JOptionPane.showInputDialog("digite o código do produto: "));

		JOptionPane.showMessageDialog(null, bo.consultarProduto(cod));
		}while(JOptionPane.showConfirmDialog
				(null, "Continuar?", "Cliente", JOptionPane.YES_NO_OPTION,JOptionPane.QUESTION_MESSAGE)==0);
	}

}
